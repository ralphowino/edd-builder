{
  "laravel": {
    "name": "Laravel",
    "mainVersion": "master",
    "versions": {
      "master": {
        "name": "Master",
        "patterns": {
          "controller": {
            "name": "Laravel Controller",
            "uses": "php:class",
            "variables": {
              "schema" : {
                "type": "object",
                "properties":{
                  "controller_name": {
                    "type": "string"
                  }
                },
                "required": ["controller_name"]
              },
              "form":[
                "controller_name"
              ]
            },
            "definitions": {
              "class_name": "{{controller_name | capitalize}}Controller",
              "file_name": "{{controller_name | capitalize}}Controller",
              "file_path": "app/Http/Controllers/",
              "namespace": "App\\Http\\Controllers",
              "extends": "Controller"
            }
          }
        }
      }
    }
  },
  "php": {
    "name": "PHP",
    "mainVersion": "master",
    "versions": {
      "master": {
        "name": "Master",
        "patterns": {
          "class": {
            "name": "PHP Class",
            "uses": "php:file",
            "description": "A php class file",
            "variables": {
              "class_name": {
                "type": "string",
                "name": "    class_name"
              },
              "extends": {
                "type": "array",
                "name": "tends"
              },
              "implements": {
                "type": "array",
                "name": "implements"
              },
              "imports": {
                "type": "array",
                "name": "imports"
              },
              "methods": {
                "type": " array",
                "name": "methods"
              },
              "namespace": {
                "type": "string",
                "name": "namespace"
              },
              "properties": {
                "type": " array",
                "name": "properties"
              },
              "traits": {
                "type": "array",
                "name": "traits"
              }
            },
            "definitions": {
              "php_code": "{%if namespace %}namespace {{namespace}}; {% endif %}\n\n\n{%if imports %}\n{% for import in imports %}\nuse {{import}};\n\n{% endfor %}\n{% endif %}\n\nclass {{class_name}} {%if extends %}extends {{extends}} {% endif %}\n{%if implements %}implements {{ implements | join(\",\") }}\n\n{% endif %}\n{\n \n{%if traits %}   use {{traits | join(\", \")}};\n\n{% endif %}\n{%if methods %}\n{% for method in methods %}\n{% set method_name = method.method_name  %}\n{% set scope = method.scope  %}\n{% set parameters = method.parameters  %}\n{% set method_body = method.method_body  %}\n\n    {% include \"php_method\" %}\n{% endfor %};\n\n{% endif %}\n}"
            }
          },
          "file": {
            "name": "PHP File",
            "uses": "base:file",
            "variables": {
              "php_code": {
                "type": "string"
              }
            },
            "definitions": {
              "file_name_suffix": ".php",
              "content": "<?php {{ php_code | safe }}"
            }
          }
        }
      }
    }
  },
  "base": {
    "name": "Base",
    "mainVersion": "master",
    "versions": {
      "master": {
        "name": "Master",
        "patterns": {
          "file": {
            "name": "File",
            "variables": {
              "file_name": {
                "type": "string",
                "name": "Filename"
              },
              "file_name_suffix": {
                "type": "string",
                "name": "Filename Suffix"
              },
              "file_name_prefix": {
                "type": "string",
                "name": "Filename Prefix"
              },
              "content": {
                "type": "string",
                "name": "Content"
              }
            },
            "render": "{{file_path}}{{file_name_prefix}}{{file_name}}{{file_name_suffix}}\n{{content | safe }}"
          },
          "php_method": {
            "render": "{{scope}} function {{method_name}}(${{parameters | join(\", $\"  )}})\n    {\n        {{ method_body | safe }}\n    }"
          }
        }
      }
    }
  }
}